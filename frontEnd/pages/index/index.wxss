.container {  
    display: flex;  
    flex-direction: column; /* 或者使用 row 来水平排列按钮 */  
    align-items: center; /* 垂直居中 */  
    justify-content: center; /* 水平居中（如果使用了 flex-direction: row） */  
    padding: 20px;  
  }  
    
  button {  
    margin: 10px;  
    padding: 10px 20px;  
    font-size: 16px;  
  }
  .progress-bar {
    width: 100%;
    height: 20px;
    background-color: #e0e0e0;
    border-radius: 10px;
    margin-top: 10px;
  }
  
  .progress {
    height: 100%;
    background-color: #3b5998; /* 进度条颜色 */
    border-radius: 10px;
  }